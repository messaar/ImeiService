<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="#BDBDBD" />
            <stroke
                android:width="1dp"
                android:color="#BDBDBD" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#B40404" />
            <stroke
                android:width="1dp"
                android:color="#B40404" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>


    <item>
        <shape>
            <gradient
                android:startColor="#FF0000"
                android:endColor="#FF0000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF0000" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>